<br/>
<div class="row">
    <div class="col-sm-6">

        <% post.comments.forEach(function (comment,index) { %>
        <p><a href="<%=comment.website%>"><%=comment.name%></a></p>
        <span>回复于:<%=comment.time%></span>
        <p><%- comment.content%></p>
        <%})%>
        <form method="post">
            <%if(user){%>
            <div class="form-group">
                <label for="name">姓名</label>
                <input type="text" class="form-control" id="name"
                       name="name" placeholder="姓名" value="<%=user.name%>">
            </div>
            <div class="form-group">
                <label for="email">邮箱</label>
                <input type="text" class="form-control" id="email"
                       name ="email" placeholder="邮箱" value="<%=user.email%>">
            </div>

            <div class="form-group">
                <label for="email">网址</label>
                <input type="text" class="form-control" id="website"
                       name ="website" placeholder="网址" value="<%=user.website%>">
            </div>
            <%}else{%>
            <div class="form-group">
                <label for="name">姓名</label>
                <input type="text" class="form-control" id="name"
                       name="name" placeholder="姓名" >
            </div>
            <div class="form-group">
                <label for="email">邮箱</label>
                <input type="text" class="form-control" id="email"
                       name ="email" placeholder="邮箱" >
            </div>

            <div class="form-group">
                <label for="email">网址</label>
                <input type="text" class="form-control" id="website"
                       name ="website" placeholder="网址">
            </div>
            <%}%>
            <textarea name="content" rows="5" cols="80"></textarea>
            <button type="submit" class="btn btn-primary">留言</button>
        </form>
    </div>
</div>
